{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "http://*:*/*" },
        { "url": "https://*:*/*" }
      ]
    },
    "log:default",
    "fs:default",
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        {
          "path": "$DOWNLOADS/**"
        },
        {
          "path": "$DOCUMENTS/**"
        },
        {
          "path": "$DESKTOP/**"
        },
        {
          "path": "$PICTURES/**"
        },
        {
          "path": "$MOVIES/**"
        }
      ]
    },
    "dialog:default"
  ]
}